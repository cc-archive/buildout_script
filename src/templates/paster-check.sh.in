#!/bin/bash

PIDFILE=%(directory)s/paster.pid
RESTART="%(bin-directory)s/paster serve %(directory)s/server.cfg --daemon --pid-file=$PIDFILE --log-file=%(directory)s/paster.log"

# see if the PID file exists
if [ ! -f $PIDFILE ]; then
   # file does not exist, start the server
   $RESTART
else

   export PID=`cat $PIDFILE`
   export RUNNING=`ps -p $PID | wc -l`

   if [ "$RUNNING" -le 1 ]; then
      # hack to make lxml find the right libxml2 installation
      # export LD_LIBRARY_PATH=/usr/local/lib:$LD_LIBRARY_PATH
      $RESTART
   fi
fi
